@{
    ViewData["Title"] = "Create";
}
@model XBServiceEditViewModel

@{
    DateTime now = DateTime.UtcNow;
}
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Project /</span> Yaratmaq</h4>
        <div class="card">
            <div class="card-body">
                <!-- Admin Project  Create Start -->
                <section style="margin-top: 10px;" id="createPoster">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class=" formBox  col-lg-8 col-md-12 col-sm-12 ">

                                <form class="form-control" asp-action="edit" asp-controller="XBService" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" value="@Model.XBService.Id" asp-for="XBService.Id" />
                                    <!-- Layihə Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="XBService.NameAz" class="form-label">Layihə adı*</label>
                                        <input asp-for="XBService.NameAz" maxlength="100" type="text" class="form-control">
                                        <span asp-validation-for="XBService.NameAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- Layihə Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="XBService.NameEn" class="form-label">Layihə adı*</label>
                                        <input asp-for="XBService.NameEn" maxlength="100" type="text" class="form-control">
                                        <span asp-validation-for="XBService.NameEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- Layihə Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="XBService.NameRu" class="form-label">Layihə adı*</label>
                                        <input asp-for="XBService.NameRu" maxlength="100" type="text" class="form-control">
                                        <span asp-validation-for="XBService.NameRu" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- Layihə DescribeAz  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="XBService.DescribeAz" class="form-label">Layihə Təsviri (Azərbaycan) *</label>
                                        <textarea asp-for="XBService.DescribeAz" maxlength="5000" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="XBService.DescribeAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeAz   End -->
                                    <!-- Layihə DescribeEn  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="XBService.DescribeEn" class="form-label">Layihə Təsviri (İngilis) *</label>
                                        <textarea asp-for="XBService.DescribeEn" maxlength="5000" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="XBService.DescribeEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeEn   End -->
                                    <!-- Layihə DescribeRu  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="XBService.DescribeRu" class="form-label">Layihə Təsviri (Rus) *</label>
                                        <textarea asp-for="XBService.DescribeRu" maxlength="5000" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="XBService.DescribeRu" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeRu   End -->
                                    <!-- Button  Start -->
                                    <div class="row d-flex justify-content-end mb-3">
                                        <div class="col mb-1">
                                            <a style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " asp-action="index" asp-controller="XBService" class="btn  btn-dark">Geri dön</a>
                                        </div>
                                        <div class="col mb-1 posterButton ms-2 ">
                                            <button style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " type="submit" class="btn  btn-primary">Yaratmaq</button>
                                        </div>
                                    </div>
                                    <!-- Button  Start -->
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!--  Admin Project  Create  End -->

            </div>
        </div>
    </div>
    <!-- / Content -->
</div>


@section Scripts{

}

