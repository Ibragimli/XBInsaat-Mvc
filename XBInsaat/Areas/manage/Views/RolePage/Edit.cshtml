@model RolePageEditViewModel
@{
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">RolePage /</span>Edit</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">RolePage</h5>
                    <div class="card-body">
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                                @* Value *@
                                <div class="col-lg-12 mb-3">
                                    <div class="form-group row ">
                                        <input type="hidden" asp-for="RolePageEditDto.Id" value="@Model.RolePageEditDto.Id" />
                                        <input type="hidden" asp-for="RolePageEditDto.AllPagesRoles" value="@Model.RolePageIdentityRoles" />

                                        <label asp-for="RolePageEditDto.Key" class="control-label" style=" color: #886CC0; font-weight: 700; font-size: 20px; ">
                                            <span>@Model.RolePageEditDto.Key</span>
                                        </label>
                                        @foreach (var role in Model.Roles)
                                        {
                                            <div class="col-lg-3 col-md-4 col-sm-5">
                                                <input @(Model.RolePageIdentityRoles.Any(x => x.IdentityRoleId == role.Id && x.RolePageId == Model.RolePageEditDto.Id) ? "checked" : "") style="margin-top: 6px; margin-right: 5px;" class="form-check-input" type="checkbox" name="RolePageEditDto.IdentityRoleIds" value="@role.Id" />
                                                <label asp-for="@role.Name" class="control-label" style=" color: #886CC0; font-weight: 700; font-size: 20px; ">
                                                    <span>@role.Name</span>
                                                </label>
                                            </div>
                                        }
                                        <span asp-validation-for="RolePageEditDto.RoleId" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex justify-content-end col-12">
                                        <a asp-action="index" asp-controller="RolePage" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                        <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Redaktə et</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-backdrop fade"></div>
