@model RevolutionSlider
@{
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">RevolutionSlider /</span>Edit</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">RevolutionSlider</h5>
                    <div class="card-body">
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                                <input type="hidden" asp-for="Id" value="@Model.Id" />
                                @* Value *@
                                <div class="col-lg-9 mb-3">

                                    <div id="sliderimage-box" class="sliderimage-box row mb-3">
                                        <label asp-for="ImageFile" class="form-label">Slider şəkli*</label>
                                        <!-- Şəkil əlavə et -->
                                        <input asp-for="ImageFile" id="imagePosterInput" type="file" accept="image/png,  image/jpeg"
                                               class="form-control" multiple="">

                                        <div class="col-3">
                                            <div style="position:relative;" class="image-box">
                                                <input type="hidden" value="@Model.Id" />
                                                <img style="margin-left: 100px;margin-top: 20px;width: 350px;border: 1px solid gray;height: 180px; " src="~/uploads/revolutionSlider/@Model.Image" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end col-12">
                                        <a asp-action="index" asp-controller="RevolutionSlider" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                        <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Redaktə et</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-backdrop fade"></div>


<script>

    const imagePosterInput = document.getElementById('imagePosterInput');
    const posterImageBox = document.getElementById('sliderimage-box');

    imagePosterInput.addEventListener('change', function (e) {
        const file = e.target.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            const imageBox = posterImageBox.querySelector('.image-box');
            const image = imageBox.querySelector('img');

            image.src = e.target.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        }
    });


</script>
