@model SettingIndexViewModel
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Settings /</span> Index</h4>


        <!-- Bordered Table -->
        <div class="card">
            <div class="card-body">
                @* Pagination *@
                <div class="row">
                    <div class="d-flex align-items-center col-5">
                        <form asp-action="index" asp-controller="Setting" asp-route-page="@ViewBag.Page" class="d-flex">
                            <input name="search" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-primary" type="submit">Search</button>
                        </form>
                    </div>
                    <div class="d-flex align-items-center col-5" style="display:flex; justify-content:flex-end;">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                @if (Model.PagenatedItems.HasPrev)
                                {

                                    <li class="page-item">
                                        <a asp-action="index" asp-controller="Setting" asp-route-page="@(Model.PagenatedItems.PageIndex-1)" class="page-link" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                }
                                @for (int i = 1; i <= Model.PagenatedItems.TotalPages; i++)
                                {
                                    <li aria-current="page" class="page-item" @(Model.PagenatedItems.PageIndex == i ? "active" : "")>
                                        <a asp-action="index" asp-controller="Setting" asp-route-page="@i" class="page-link">@i</a>
                                    </li>
                                }
                                @if (Model.PagenatedItems.HasNext)
                                {
                                    <li class="page-item">
                                        <a asp-action="index" asp-controller="Setting" asp-route-page="@(Model.PagenatedItems.PageIndex+1)" class="page-link" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>

                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>

                </div>
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Açar</th>
                                <th>Dəyər</th>
                                <th>Dəyişdirilmə tarixi</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in Model.PagenatedItems)
                            {
                                <tr>
                                    <td>@setting.Key</td>
                                    <td>
                                        @if (setting.Value != null && setting.Key.EndsWith("Image"))
                                        {
                                            <img  src="~/uploads/setting/@setting.Value" style="witdh:50%" height="100" />
                                        }
                                        else
                                        {
                                            @setting.Value
                                        }
                                    </td>

                                    <td>
                                        @setting.ModifiedDate
                                    </td>

                                    <td>
                                        <div class="d-flex justify-content-sm-around">
                                            <a asp-route-id="@setting.Id" asp-action="edit" asp-controller="Setting"><i style="font-size: 26px !important;" class="bx bx-edit-alt me-1"></i> </a>
                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--/ Bordered Table -->
    </div>
    <!-- / Content -->
</div>

@section Scripts{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}