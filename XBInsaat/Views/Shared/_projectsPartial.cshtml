@model HomeIndexProjectsViewModel
@{
    var language = _localization.Getkey("Language").Value;

}
<!-- Modal Projects -->
<div class="modal fade" id="projectsModalScrollable" tabindex="-1" role="dialog"
     aria-labelledby="projectsModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 style="color:#00a7c6;" class="modal-title" id="projectsModalScrollableTitle">

                    @Html.Raw(Model.Settings.FirstOrDefault(x => x.Key == "ModalProjectTitle" + language)?.Value)

                </h2>
                <button type="button" id="close-first" class="" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="modal-body">
                <!-- Older posts -->
                <section class="mt-2 fx-fade-up">
                    <div class="container">
                        <div class="row mt-4">
                            <!-- Post -->
                            @foreach (var highProject in Model.HighProjects)
                            {
                                <div class="col-lg-4  col-md-10 mb-2 projectBoxs">
                                    <!-- Featured image -->
                                    <a href="#!" id="openModal2" data-bs-toggle="modal"
                                       data-bs-target="#project-@highProject.Name.Substring(0,3)-@highProject.Id">
                                        <img src="~/uploads/highprojects/@highProject.HighProjectImages.FirstOrDefault(x=>x.HighProjectId == highProject.Id)?.Image"
                                             class="img-fluid rounded hover-lift-light" alt="">
                                    </a>

                                    <!-- Title -->
                                    <a href="#!" id="openModal2" data-bs-toggle="modal"
                                       data-bs-target="#project-@highProject.Name.Substring(0,3)-@highProject.Id"
                                       class="projectBoxTitle d-block text-dark text-decoration-none mt-4">
                                        @highProject.Name
                                    </a>

                                    <!-- Read more -->
                                    <a href="#!" id="openModal2" data-bs-toggle="modal"
                                       data-bs-target="#project-@highProject.Name.Substring(0,3)-@highProject.Id"
                                       class="postReadText d-inline-block border-bottom border-primary text-decoration-none mt-2 pb-1">
                                        @Html.Raw(Model.Settings.FirstOrDefault(x => x.Key == "ReadPostText" + language)?.Value)
                                    </a>
                                </div>
                                @await Html.PartialAsync("_projectPartial", highProject)
                            }
                        </div>
                        <!-- Go to previous posts -->
                        <a href="#" id="close-first" data-bs-dismiss="modal" aria-label="Close"
                           class="projectBackBtn btn btn-pastel-primary hover-lift-light text-uppercase-bold-sm mt-4">
                            <i class="fas fa-chevron-left fa-sm mr-2"></i>
                            @Html.Raw(Model.Settings.FirstOrDefault(x => x.Key == "ModalHomeBackBtnText" + language)?.Value)

                        </a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
